{
  "manifest_version": 3,
  "name": "Session Saver",
  "version": "1.0",
  "description": "Save and load your browser sessions including tabs and tab groups.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icons8-bookmark-16.png",
      "48": "icons/icons8-bookmark-48.png",
      "128": "icons/icons8-bookmark-128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icons8-bookmark-16.png",
    "48": "icons/icons8-bookmark-48.png",
    "128": "icons/icons8-bookmark-128.png"
  }
}
